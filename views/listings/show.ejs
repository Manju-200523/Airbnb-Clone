<% layout("/layouts/boilerplate") -%>
<body>

  <div class="row mt-3">
    <div class="col-8 offset-2"> 
      <h3><%= listing.title %></h3>
    </div>   

    <div class="card col-6 offset-3 show-card" style="width: 30rem;">
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing image">
      <div class="card-body">
        <p class="card-text"><i>Owned by <%= listing.owner.username %></i></p>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text">â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
        <p class="card-text"><%= listing.location %>, <%= listing.country %></p>
      </div>
    </div>
  </div>

  <br>

  <div class="row mt-3">
    <div class="col-2 offset-3">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
    </div>

    <div class="col-2 offset-0">
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
  </div> 

  <!-- Map container -->
  <div id="map"></div>

  <div class="col-8 offset-3 mt-3">
    <hr>
    <h4>Leave a Review</h4>
    <!-- Review form here -->
    <form action="/listings/<%= listing._id %>/reviews" method="POST">
      <fieldset class="starability-basic">
        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>

        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>

        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>

        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>

        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>

      <div class="mb-3 mt-2">
        <label for="comment" class="form-label">Comment</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
        <div class="invalid-feedback">
          Please provide a comment.
        </div>
      </div>

      <button type="submit" class="btn btn-outline-dark mt-2">Submit Review</button>
    </form>
    
    <hr>
    <h4>All Reviews</h4>
    <div>
      <% for(let review of listing.reviews) { %>
        <div class="card mb-3 p-2">
          <div class="card-body">
            <h5 class="card-title">@<%= review.author.username %></h5>
            <h6>Ratings</h6>
            <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text">
              <small class="text-muted">Reviewed on <%= review.createdAt.toDateString() %></small>
            </p>
          </div>
          
          <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
            <button class="btn btn-danger mb-2 p-2">Delete Review</button>
          </form>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Leaflet JS must load before your script -->
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

  <!-- Map JS -->
<!-- Minimal safe EJS snippet to pass data -->
<script>
  window.listingData = {
    coordinates: ["<%= listing.geometry.coordinates[1] %>", "<%= listing.geometry.coordinates[0] %>"],
    title: "<%= listing.title %>",
    location: "<%= listing.location %>"
  };
</script>

<!-- Load the external JS file -->
<script src="/js/listingMap.js"></script>




</body>
